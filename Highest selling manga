    ("Action"),
    ("Adventure"),
    ("Adventure"),
    ("Action"),
    ("Action"),
    ("Adventure");

Modify the "top_manga" table to include foreign keys to "authors" and "genres":
ALTER TABLE top_manga ADD COLUMN author_id INTEGER;
ALTER TABLE top_manga ADD COLUMN genre_id INTEGER;

